<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Green Commerce</title>

<script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/holder.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/siteDash.css" />
    <link rel="stylesheet" href="/css/profile.css" />

  </head>
  <body>
  	<nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
      <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/">Green Commerce</a>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
              <a class="nav-link active" href="/">Dashboard</a>
             {{#if info.headers.cookie}}
             <li class="nav-item">
              <a class="nav-link" href="/users/profiles/self">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sites/collection">Sites</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/logout">Logout</a>
            </li>
            {{else}}
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/register">Register</a>
            </li>
            {{/if}}
        </ul>
        <form class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

  
      <div class="row marketing">
        <div class="col-lg-12">
        	{{#if success_msg}}
        	<div class="alert alert-success alert-dismissible fade show" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <span aria-hidden="true">&times;</span>
		  </button>
		  <strong>Success!</strong>
		   {{{success_msg}}}
		</div>
		{{/if}}
		{{#if error_msg}}
        	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <span aria-hidden="true">&times;</span>
		  </button>
		  <strong>Fuck!</strong>
		   {{{error_msg}}}
		</div>
		{{/if}}
		{{#if error}}
        	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <span aria-hidden="true">&times;</span>
		  </button>
		  <strong>Oh shit!</strong>
		   {{{error}}}
		</div>
		{{/if}}


          {{{body}}}
        </div>
      </div>

      <footer class="footer">
        <p>&copy; P and. P LLC 2018</p>
      </footer>

    <!-- /container -->
   
    <script>
      $(function () {
        Holder.addTheme("thumb", { background: "#55595c", foreground: "#eceeef", text: "Thumbnail" });
      });

      
    </script>
  </body>
</html>

